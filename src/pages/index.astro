---
// 1. Import your data
import data from '../data/profile.json';

// 2. Assign data to variables for easier use
const { name, bio, imageUrl, links } = data;
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{name}'s Links</title>
</head>
<body class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
    <main class="w-full max-w-md mx-auto">
        <header class="text-center">
            <img 
                src={imageUrl} 
                alt="Profile picture for {name}" 
                class="w-24 h-24 rounded-full mx-auto shadow-lg"
            />
            <h1 class="text-2xl font-bold mt-4">{name}</h1>
            <p class="text-gray-600 mt-1">{bio}</p>
        </header>

        <section class="mt-8 flex flex-col gap-4">
            {links.map((link) => (
                <a 
                    href={link.url}
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="block w-full bg-blue-600 text-white text-center font-semibold p-4 rounded-lg shadow-md transition-transform transform hover:scale-105"
                >
                    {link.title}
                </a>
            ))}
        </section>
    </main>

    <style>
        body { font-family: sans-serif; }
        .bg-gray-100 { background-color: #f3f4f6; }
        /* ... add other basic utility classes if not using Tailwind ... */
    </style>
</body>
</html>